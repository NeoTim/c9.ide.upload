<a:application xmlns:a="http://ajax.org/2005/aml">

    <a:model id="mdlUploadActivity">
        <data />
    </a:model>

    <a:frame id="boxUploadActivity" caption="Upload Activity" class="uploadframe">
        <a:button id="btnCancelUploads"
          caption = "Cancel"
          skin    = "btn-cancel-upload"
          skinset = "uploadfiles"
          margin  = "7 3 0 0" 
          top     = "-24"
          right   = "20" 
          zindex  = "100" />
        <a:button id="btnToggleUploadQueue" skin="btn_console_open" 
            icon="switch.png" state="true" value="0" margin="6 5 0 0" 
            top="-33" right="-5" zindex="100" />
    
        <a:list id="lstUploadActivity"
            skin = "list-uploadactivity"
            skinset = "uploadfiles"
            height="160"
            scrollbar = "sbShared 32 2 2"
        >
            <a:each match="[file]">
                <a:caption><?lm
                    <div class="uploadactivity-caption bold">[@name]</div>
                    <div class="uploadactivity-progress">[@progress]%</div>
                    <div class="uploadactivity-delete" onclick="apf.findHost(this.parentNode).remove(%[.])"></div>
                ?></a:caption>
            </a:each>
        </a:list>
    </a:frame>
</a:application>
